<h1>Edit Post</h1>
<div class="row">
  <form action="/posts/{{post.id}}?_method=PUT" method="post" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{post.title}}">
        <label for="title">Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status">
          {{#select post.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <p>
        <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if post.allowComments}}checked="checked" {{/if}}>
        <label for="filled-in-box">Allow Comments </label>
      </p>
    </div>

    <div class="row">

      <table>
          <tr>
            <div class="input-field">
              <input type="text" name="tel" placeholder="1-234-566-7890"  value="{{post.tel}}">
              <label for="name">Number</label>
            </div>
					</tr>
           <tr>
            <div class="input-field">
              <input type="text" name="longitude" placeholder="-71.058880"  value="{{post.longitude}}">
              <label for="name">Longitude</label>
            </div>
					</tr>
          <tr>
            <div class="input-field">
              <input type="text" name="latitude" placeholder="42.360082"  value="{{post.latitude}}">
              <label for="name">Latitude</label>
            </div>
					</tr>
          <tr>
            <div class="input-field">
              <input type="text" name="intro" placeholder="Describe your business"  value="{{post.intro}}">
              <label for="name">Intro</label>
            </div>
					</tr>
					
				</table>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>


