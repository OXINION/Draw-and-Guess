<h1>Code_Go Newsfeed</h1>
<div class="row">
  {{#each posts}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{#if user}}
            {{{alterIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="story-text">{{  intro}}</p>
          <br>
          <div class="chip">
            <a href="/posts/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/posts/show/{{id}}">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No post found</p>
  {{/each}}
</div>


